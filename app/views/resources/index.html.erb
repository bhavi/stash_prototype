<table class="table table-striped">
  <thead>
    <tr>
      <th>Identifier</th>
      <th>Identifiertype</th>
      <th>User</th>
      <th>Local</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.identifier %></td>
        <td><%= resource.identifierType %></td>
        <td><%= resource.user_id %></td>
        <td><%= resource.local_id %></td>
        <td><%= link_to 'Show', resource, class: "btn btn-info"  %></td>
        <td><%= link_to 'Edit', edit_resource_path(resource), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', resource, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

