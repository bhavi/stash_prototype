<p id="notice"><%= notice %></p>

<h1>Listing Institutions</h1>

<table>
  <thead>
    <tr>
      <th>Abbreviation</th>
      <th>Short name</th>
      <th>Long name</th>
      <th>Landing page</th>
      <th>External id strip</th>
      <th>Campus</th>
      <th>Url</th>
      <th>Url text</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @institutions.each do |institution| %>
      <tr>
        <td><%= institution.abbreviation %></td>
        <td><%= institution.short_name %></td>
        <td><%= institution.long_name %></td>
        <td><%= institution.landing_page %></td>
        <td><%= institution.external_id_strip %></td>
        <td><%= institution.campus %></td>
        <td><%= institution.url %></td>
        <td><%= institution.url_text %></td>
        <td><%= institution.logo %></td>
        <td><%= link_to 'Show', institution %></td>
        <td><%= link_to 'Edit', edit_institution_path(institution) %></td>
        <td><%= link_to 'Destroy', institution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

